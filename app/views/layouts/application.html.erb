<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/stylesheets' %>
  <%= csrf_meta_tag %>
  <title><%= title %></title>
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <section class="round">
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, :class => "flash #{key}") %>
			<% end %>
      <%= yield %>
    </section>
    <%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
